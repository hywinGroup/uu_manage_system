.oprate-btns{
	width:100%;
	padding-top:40rpx;
}
.oprate-btns .btn-primary{
	width:60%;
}
.btn-first{	
	animation:mymove 0.3s;
}
.btn-sec{
	animation:mymove 0.5s;
}
.btn-third{
	animation:mymove 0.8s;
}


.oprate-btns .btn-primary{
	margin-top:60rpx;
}
.form{
  width:80%;
  margin: 0 auto;
  margin-top:80rpx;
  padding:30rpx;
  border:solid 2px #eee;
  -moz-box-shadow: 10px 10px 5px #000 insert; /* 老的 Firefox */
  box-shadow: 10px 10px 5px #000 insert;
}
.block{
  margin-top:40rpx;
  display: flex;
  justify-content:space-between;
  width:100%;
}
.block .label,.block .btn{
  line-height: 44rpx;
}
.block .label{
  font-size:30rpx;
  flex:1;
}
.block .detail{
  flex:2;
}
.block .btn{
  font-size:30rpx;
  padding:0 16rpx;
  border:solid 2rpx #ccc;
  border-radius: 10rpx;
  margin-right:20rpx;
}
.block .address{
  display:flex;
}
.block .address .value{
  font-size:26rpx;
  line-height: 44rpx;
}
.invite-code {
  position: absolute;
  bottom:40rpx;
  right:30rpx;
  width:160rpx;
}
.invite-code .btn-primary{
  font-size:24rpx;
  padding:0;
}

