
<view>
	<view class="back-book-title">
		<image mode="widthFix" class="detail-img" src="{{book.cover}}"  />
	</view>
	<view class="back-book-info">
		<view class="block">
			<view class="label">书名：</view><view>{{book.theme}}</view>
		</view>
		<view class="block">
			<view class="label">押金：</view><view class="money">{{book.deposit/100}}</view>
		</view>
		<view class="block">
			<view class="label">租金：</view><view class="money">{{book.dailyRent/100}} * {{book.day}}</view>
		</view>
	</view>
	<view class="back-book-pay">
		<button class="btn-primary" type="button" bindtap="">退还{{backMoney}}</button>
	</view>
</view>