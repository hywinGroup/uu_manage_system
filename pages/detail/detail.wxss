.detail{
  background: #e1e1e1;
} 
.book-detail{
  display: flex;
  width:100%;
  padding:30rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.book-spec{
  width:100%;
  background: #fff;
  margin-bottom: 30rpx;
  padding-bottom:30rpx;
  font-size: 30rpx;
}
.book-img{
  width:220rpx;
	margin-left:30rpx;
	height:220rpx;
  border-radius:50%;
  border:solid 1rpx #eaeaea;
}
.book-items{
  padding-left:30rpx;
  padding-top:15rpx;
  line-height:45rpx; 
  color:#666;
  font-size:26rpx;
}
.book-items .title{
	font-size:32rpx;
  color:#666;
}

.section{
  display: flex;
  height:30rpx;
  border-bottom:1rpx solid #eaeaea;
  color: #666;
  font-size:30rpx;
  padding:20rpx ;
  line-height:30rpx;
  align-items: center;
}
.section-title{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.picker{
  padding-right: 20rpx;
  position: relative;
}

.picker:after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -4rpx;
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 4rpx;
}

.refreshBtn{
  height:60rpx;
  line-height:60rpx;
  font-size:30rpx;
  margin-right:0;
}

.rent{
  display: flex;
  flex-flow: row;
  position: relative;
  right: 0;
  bottom:0;
  align-items: center;
  padding:0 20rpx;
}
.rent input{
  display: inline-block;
  width:100rpx;
  height:30rpx;
  line-height: 30rpx;
  text-align: center;
  border:1rpx solid #eaeaea;
  align-items: center;
}

.oprate-btns{
	width:100%;
	padding-top:40rpx;
  background: #fff;
}
.oprate-btns .btn-primary{
	width:80%;
}